<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<VBox alignment="center" prefHeight="500" prefWidth="500" xmlns:button="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

      <Label fx:id="label1" text="FLabel:" />
      <Button fx:id="button1" onAction="#handleButton1OnClick" text="FButton:" />
   <Label text="${label1.text}" fx:id="label2"/>
    <fx:define>
        <ToggleGroup fx:id = "toggleGroup"/>
    </fx:define>
    <RadioButton text="easy" toggleGroup="$toggleGroup" fx:id="easy"/>
    <RadioButton text="medium" toggleGroup="$toggleGroup" fx:id="medium"/>
    <RadioButton text="hard" toggleGroup="$toggleGroup" fx:id="hard"/>

</VBox>
